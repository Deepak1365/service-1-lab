pipeline {
    agent any
    
    environment {
        DOCKER_IMAGE = 'deepak/service-1-lab'  // Replace with your Docker image name
        REGISTRY = 'docker.io'  // Docker registry, e.g., Docker Hub
        DOCKER_CREDENTIALS = 'docker-credentials'  // Jenkins credentials for Docker Hub (if needed)
    }

    stages {
        stage('Checkout') {
            steps {
                git 'https://github.com/Deepak1365/service-1-lab.git'
            }
        }

        stage('Build with Maven') {
            steps {
                script {
                    // Run Maven build
                    sh 'mvn clean install -DskipTests' // Build the Maven project
                }
            }
        }

        stage('Run Tests') {
            steps {
                script {
                    // Run Maven tests
                    sh 'mvn test' // Run Maven tests
                }
            }
        }

        stage('Docker Build and Push') {
            steps {
                script {
                    // Build the Docker image
                    sh 'docker build -t ${DOCKER_IMAGE} .'

                    // Log in to Docker Hub (use Jenkins credentials if needed)
                    withCredentials([usernamePassword(credentialsId: 'docker-credentials', passwordVariable: 'DOCKER_PASSWORD', usernameVariable: 'DOCKER_USERNAME')]) {
                        sh 'echo $DOCKER_PASSWORD | docker login -u $DOCKER_USERNAME --password-stdin'
                    }

                    // Push the Docker image to Docker Hub
                    sh 'docker push ${DOCKER_IMAGE}'
                }
            }
        }
    }

    post {
        success {
            echo 'Build and deployment were successful!'
        }
        failure {
            echo 'Build or deployment failed.'
        }
    }
}
